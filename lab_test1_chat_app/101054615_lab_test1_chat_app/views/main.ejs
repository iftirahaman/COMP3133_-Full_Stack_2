  <body>
      
    <div class="container-md">
        <div class="row g-1">
            <div class="col-sm-9 col-4 bg-dark">
                <h3 style="color:white;text-align:center">Chat App</h3>
            </div>
            <div class="col-sm-1 col-2 bg-dark">
                <form action="/logout" method="POST"><button class="btn btn-outline-light pull-right" type="submit">Leave Room</button></form>
            </div>
        <div>
        <div class="row g-2">
            
            <div class="col-2">
              <div class="p-3 border bg-light side-panel">Room Name: <%= roomt %>
                <br>
                Members: <%= room %></p>
              </div>
            </div>
            <input type="hidden" value='<%= roomt %>' id="room-name">
            <input type="hidden" value='<%= room[j] %>' id="users">
            <div class="col-8">
              <div class="p-3 border bg-light msg-contain">

                <% for(var i=0;i< data.length; i++){ %>
                <div class="container-fluid bg-white" style="padding:20px;border-radius:5px;">  
                  <%= data[i].message %>
                  <br><sub>By  <%= data[i].fromUser %>, at: <%= data[i].date_sent %></sub>
              </div><br>
                  <% } %>
              </div>
            </div>
        <div>

        <div class="row g-1" style="padding:10px;">
            <div class="col-10 bg-dark" style="padding:5px">
                <form action="/main" method="POST" class="chat-form">
                
                <div class="input-group mb-3">
                    <input type="text" class="form-control chat-input" placeholder="Type Your Message here" name="msg">
                    <select class="form-select form-select-sm btn-outline-secondary mw-5 p-3" aria-label=".form-select-sm example" name="toUser">
                      <% for(var j=0;j< room.length;j++){ %>
                      <option value='<%= room[j] %>'><%= room[j] %></option>
                      <% } %>
                    </select>
                    <button class="btn btn-outline-secondary text-white" type="submit">Send</button>
                  </div>
                </form>
            </div>
        <div>

      </div>      

  
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
